
<div class="container">
  <h1>Edit: <%= @task.title %> </h1>

  <div class="form">
    <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <br>
      <br>
      <%= f.label :details %>
      <%= f.text_field :details %>
      <br>
      <br>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
      <br>
      <br>
      <%= f.submit %>
    <% end %>
  </div>
  <br>
  <%= link_to "Back to List", tasks_path %>
</div>
